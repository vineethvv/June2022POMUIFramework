<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Open Cart App Regression Suite" thread-count="2" parallel="tests" verbose="4">

	<listeners>
		<listener 
		    class-name="com.qa.opencart.listeners.ExtentReportListener" />
		    <listener
			class-name="com.qa.opencart.listeners.TestAllureListener" />
			<listener
			class-name="com.qa.opencart.listeners.AnnotationTransformer" />
			    
	</listeners>

	<test name="Login Test">
        <parameter name="browser" value="chrome" />
        <parameter name="browserversion" value="90.0" />
        <parameter name="testname" value="LoginPageTest" />
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>

	<test name="Accounts Page Test">
	    <parameter name="browser" value="chrome" />
	    <parameter name="browserversion" value="107.0" />
	     <parameter name="testname" value="AccountsPageTest" />
		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest" />
		</classes>
	</test>


</suite>